<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/snow_notif_icon_size"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/snow_notif_icon"
        android:layout_width="@dimen/snow_notif_icon_size"
        android:layout_height="@dimen/snow_notif_icon_size"
        android:contentDescription="@string/snow_des_music_icon"
        android:scaleType="centerInside"
        android:src="@mipmap/snow_notif_default_icon" />

    <FrameLayout
        android:layout_width="12dp"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/snow_notif_icon_size"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/snow_notif_title"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snow_text_unknown" />

        <TextView
            android:id="@+id/snow_notif_text"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snow_text_unknown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/snow_notif_play_pause"
            android:layout_width="@dimen/snow_notif_button_size_40dp"
            android:layout_height="@dimen/snow_notif_button_size_40dp"
            android:background="@drawable/snow_bg_notif_button"
            android:contentDescription="@string/snow_des_play_pause"
            android:scaleType="centerInside"
            android:src="@drawable/snow_ic_play"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/snow_notif_skip_to_next"
            android:layout_width="@dimen/snow_notif_button_size_40dp"
            android:layout_height="@dimen/snow_notif_button_size_40dp"
            android:background="@drawable/snow_bg_notif_button"
            android:contentDescription="@string/snow_des_skip_to_next"
            android:scaleType="centerInside"
            android:src="@drawable/snow_ic_skip_next"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/snow_notif_custom_action2"
            android:layout_width="@dimen/snow_notif_button_size_40dp"
            android:layout_height="@dimen/snow_notif_button_size_40dp"
            android:background="@drawable/snow_bg_notif_button"
            android:contentDescription="@string/snow_des_custom_action"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:ignore="RtlCompat"
            tools:src="@drawable/snow_ic_music"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
