<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deep_purple_400</item>
        <item name="colorPrimaryDark">@color/deep_purple_400</item>
        <item name="colorAccent">@color/deep_purple_400</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/grey_900</item>

        <item name="colorWindowBackground">@android:color/white</item>
        <item name="colorSecondaryText">@color/grey_500</item>
        <item name="colorDivider">@color/grey_300</item>
        <item name="colorMark">@color/deep_purple_400</item>
    </style>

    <!-- WelcomeActivity Theme -->
    <style name="AppTheme.Welcome">
        <item name="android:windowBackground">@color/deep_purple_400</item>
    </style>

    <style name="BottomDialogTransition">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_slide_out</item>
    </style>

    <style name="BottomDialogTransition.NoEnterAnim">
        <item name="android:windowEnterAnimation">@null</item>
    </style>

</resources>
