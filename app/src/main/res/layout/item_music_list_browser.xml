<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/musicListBrowserItem"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_list_item"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/ivMusicListIcon"
        android:layout_width="@dimen/music_list_browser_item_icon_size"
        android:layout_height="@dimen/music_list_browser_item_icon_size"
        android:contentDescription="@string/des_music_list_icon"
        android:src="@mipmap/ic_music_list_default_icon" />

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMusicListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Best Favorites" />

        <TextView
            android:id="@+id/tvMusicListSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/colorSecondaryText"
            tools:text="16 songs" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnOptionMenu"
        android:layout_width="@dimen/image_button_size"
        android:layout_height="@dimen/image_button_size"
        android:background="@drawable/bg_button_48dp"
        android:contentDescription="@string/des_skip_to_previous"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_option_menu" />

</LinearLayout>